{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2015",
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
